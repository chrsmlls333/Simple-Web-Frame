---
import Layout from '../../layouts/Layout.astro';
import { actions } from 'astro:actions';

// Simple admin authentication (would be more robust in real app)
const isAuthenticated = true; // Replace with actual auth logic

// Get active sessions sorted by activity status and time
import { sessionStore } from '../../lib/sessionStore';
const sortedSessions = sessionStore.getAllSorted();

// Format timestamp to readable date/time
function formatTimestamp(timestamp?: number): string {
  if (!timestamp) return 'Never';
  return new Date(timestamp).toLocaleString();
}

// Get result of form submission
const updateResult = Astro.getActionResult(actions.updateSessionForm);
---

<Layout>
  <div class="admin-panel max-w-3xl mx-auto p-5">
    <h1 class="text-2xl font-bold mb-4">Session Management</h1>
    
    {isAuthenticated ? (
      <div class="session-manager bg-gray-100 p-5 rounded-lg">
        <h2 class="text-xl font-semibold mb-3">Sessions</h2>
        {sortedSessions.length === 0 && (
          <div class="text-gray-500 text-center p-4">No active sessions found</div>
        )}
        
        {sortedSessions.map(([id, config]) => {
          const isActive = config.isActive === true;
          const lastActiveTime = formatTimestamp(config.lastActive);
          
          return (
            <div class={`session-card ${isActive ? 'bg-white' : 'bg-gray-200'} p-4 rounded-lg shadow-md mb-4 border-l-4 ${isActive ? 'border-green-500' : 'border-gray-500'}`}>
              <div class="flex justify-between items-center mb-3">
                <div>
                  <h3 class="text-lg font-medium">{id}</h3>
                  <div class="flex items-center mt-1">
                    <span class={`inline-block w-3 h-3 rounded-full mr-2 ${isActive ? 'bg-green-500' : 'bg-gray-500'}`}></span>
                    <span class={`text-sm ${isActive ? 'text-green-600' : 'text-gray-600'}`}>
                      {isActive ? 'Active' : 'Inactive'}
                    </span>
                  </div>
                </div>
                <div class="text-right text-sm text-gray-600">
                  <div>Last Active:</div>
                  <div>{lastActiveTime}</div>
                </div>
              </div>
              
              <form id={`form-update-${id}`} method="POST" action={actions.updateSessionForm} class="space-y-4">
                <input type="hidden" name="sessionId" value={id} />
                <div class="form-group">
                  <label for={`iframeUrl-${id}`} class="block mb-1 text-sm font-medium">iframe URL:</label>
                  <input type="url" id={`iframeUrl-${id}`} name="iframeUrl" class="w-full p-2 border rounded" value={config.iframeUrl} required />
                </div>
                <div class="flex space-x-2">
                  <button type="submit" class="bg-green-600 text-white py-2 px-4 text-sm rounded hover:bg-green-700">
                    Update
                  </button>
                  <button 
                    type="button" 
                    class="bg-blue-600 text-white py-2 px-4 text-sm rounded hover:bg-blue-700"
                    onclick={`window.open('/?sessionId=${id}', '_blank')`}
                  >
                    Open
                  </button>
                  <button 
                    type="submit" 
                    class="bg-red-600 text-white py-2 px-4 text-sm rounded hover:bg-red-700"
                    formaction={actions.deleteSessionForm}
                  >
                    Delete
                  </button>
                </div>
              </form>
            </div>
          );
        })}
        
        {updateResult?.error && (
          <div class="update-result p-3 rounded bg-red-100 text-red-700">
            <pre>{updateResult.error}</pre>
          </div>
        )}
        {updateResult && !updateResult.error && (
          <div class="update-result p-3 rounded bg-green-100 text-green-700">
            <p>Updated successfully!</p>
          </div>
        )}
      </div>
    ) : (
      <div class="auth-required p-5 bg-red-100 text-red-700 rounded">
        <p>Authentication required to access admin panel.</p>
      </div>
    )}
  </div>
</Layout>

<script>
  // Auto-refresh the admin page every 30 seconds to show updated activity status
  setTimeout(() => {
    window.location.reload();
  }, 30000);

  // Remove URL query parameters after 10 seconds
  setTimeout(() => {
    const url = new URL(window.location.href);
    url.search = '';
    window.history.replaceState({}, document.title, url.toString());
  }, 1000);
</script>
