---
import Layout from '../../layouts/Layout.astro';
import AdminUI from '../../components/admin';
import { version as packageVersion } from '../../../package.json';

const versions = {
  astro: Astro.generator,
  node: `Node.js ${process.version}`,
  package: process.env.npm_package_version ?? packageVersion,
};

const dev = import.meta.env.DEV ? '(Dev)' : '';
---

<Layout>
  <AdminUI client:load>
    <div class='flex gap-2 text-xs text-gray-500'>
      <span class='px-2 py-1 bg-gray-200 rounded-full'>{versions.node}</span>
      <span class='px-2 py-1 bg-gray-200 rounded-full'>{versions.astro}</span>
      <span class='px-2 py-1 bg-gray-200 rounded-full'>{versions.package} {dev}</span>
    </div>
  </AdminUI>
</Layout>
